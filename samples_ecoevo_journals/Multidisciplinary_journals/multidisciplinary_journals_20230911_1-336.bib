@article{ WOS:000905457800004,
Author = {Taboada, Carlos and Delia, Jesse and Chen, Maomao and Ma, Chenshuo and
   Peng, Xiaorui and Zhu, Xiaoyi and Jiang, Laiming and Vu, Tri and Zhou,
   Qifa and Yao, Junjie and O'Connell, Lauren and Johnsen, Sonke},
Title = {Glassfrogs conceal blood in their liver to maintain transparency},
Journal = {SCIENCE},
Year = {2022},
Volume = {378},
Number = {6626},
Pages = {1315-1319},
Month = {DEC 23},
Abstract = {Transparency in animals is a complex form of camouflage involving
   mechanisms that reduce light scattering and absorption throughout the
   organism. In vertebrates, attaining transparency is difficult because
   their circulatory system is full of red blood cells (RBCs) that strongly
   attenuate light. Here, we document how glassfrogs overcome this
   challenge by concealing these cells from view. Using photoacoustic
   imaging to track RBCs in vivo, we show that resting glassfrogs increase
   transparency two-to threefold by removing similar to 89\% of their RBCs
   from circulation and packing them within their liver. Vertebrate
   transparency thus requires both see-through tissues and active
   mechanisms that ``clear{''} respiratory pigments from these tissues.
