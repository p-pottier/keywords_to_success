@article{ WOS:000879109400024,
Author = {Rodrigues, Lisa J. and Padilla-Gamino, Jacqueline L.},
Title = {Trophic provisioning and parental trade-offs lead to successful
   reproductive performance in corals after a bleaching event},
Journal = {SCIENTIFIC REPORTS},
Year = {2022},
Volume = {12},
Number = {1},
Month = {NOV 4},
Abstract = {Warming ocean temperatures are severely compromising the health and
