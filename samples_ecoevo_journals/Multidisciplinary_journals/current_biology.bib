@article{ WOS:001040182000001,
Author = {Durney, Clinton H. and Wilson, Matthew J. and McGregor, Shauni and
   Armand, Jodie and Smith, Richard S. and Gray, Julie E. and Morris,
   Richard J. and Fleming, Andrew J.},
Title = {Grasses exploit geometry to achieve improved guard cell dynamics},
Journal = {CURRENT BIOLOGY},
Year = {2023},
Volume = {33},
Number = {13},
Pages = {2814+},
Month = {JUL 10},
Abstract = {Stomata are controllable micropores formed between two adjacent guard
   cells (GCs) that regulate gas flow across the plant surface.1 Grasses,
   among the most successful organisms on the planet and the main food
   crops for humanity, have GCs flanked by specialized lateral subsidiary
   cells (SCs).2-4 SCs improve performance by acting as a local pool of
   ions and metabolites to drive changes in turgor pressure within the GCs
   that open/close the stomatal pore.4-8 The 4-celled complex also involves
   distinctive changes in geometry, having dumbbell-shaped GCs compared
   with typical kidney-shaped stomata.2,4,9 However, the degree to which
   this distinctive geometry contributes to improved stomatal performance,
   and the underlying mechanism, remains unclear. To address this question,
   we created a finite element method (FEM) model of a grass stomatal
   complex that successfully captures experimentally observed pore
   opening/closure. Exploration of the model, including in silico and
   experimental mutant analyses, supports the importance of a reciprocal
   pressure system between GCs and SCs for effective stomatal function,
   with SCs functioning as springs to restrain lateral GC movement. Our
   results show that SCs are not essential but lead to a more responsive
   system. In addition, we show that GC wall anisotropy is not required for
   grass stomatal function (in contrast to kidney-shaped GCs10) but that a
   relatively thick GC rod region is needed to enhance pore opening. Our
   results demonstrate that a specific cellular geometry and associated
   mechanical properties are required for the effective functioning of
   grass stomata.},
DOI = {10.1016/j.cub.2023.05.051},
EarlyAccessDate = {JUL 2023},
ISSN = {0960-9822},
EISSN = {1879-0445},
ORCID-Numbers = {Morris, Richard/0000-0003-3080-2613
   Wilson, Matthew J./0000-0002-2380-7849
   Durney, Clinton/0000-0002-2385-1620},
Unique-ID = {WOS:001040182000001},
