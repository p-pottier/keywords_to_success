@article{ WOS:001026793500001,
Author = {Beiza-Canelo, Natalia and Moulle, Hippolyte and Pujol, Thomas and
   Panier, Thomas and Migault, Geoffrey and Le Goc, Guillaume and Tapie,
   Pierre and Desprat, Nicolas and Straka, Hans and Debregeas, Georges and
