@article{ WOS:001058890200001,
Author = {Benedict, Lauren M. and Heinen, Virginia K. and Welklin, Joseph F. and
   Sonnenberg, Benjamin R. and Whitenack, Lauren E. and Bridge, Eli S. and
   Pravosudov, Vladimir V.},
Title = {Food-caching mountain chickadees can learn abstract rules to solve a
   complex spatial-temporal pattern},
Journal = {CURRENT BIOLOGY},
Year = {2023},
Volume = {33},
Number = {15},
Pages = {3136+},
Month = {AUG 7},
Abstract = {The use of abstract rules in behavioral decisions is considered evidence
   of executive functions associated with higher-level cognition.
   Laboratory studies across taxa have shown that animals may be capable of
   learning abstract concepts, such as the relationships between items, but
   often use simpler cognitive abilities to solve tasks. Little is known
   about whether or how animals learn and use abstract rules in natural
   environ-ments. Here, we tested whether wild, food-caching mountain
   chickadees (Poecile gambeli) could learn an abstract rule in a
   spatial-temporal task in which the location of a food reward rotated
   daily around an 8-feeder square spatial array for up to 34 days.
   Chickadees initially searched for the daily food reward by visiting the
   most recently rewarding locations and then moving backward to visit
   previously rewarding feeders, using memory of previous locations. But by
   the end of the task, chickadees were more likely to search forward in
   the correct direction of rotation, moving away from the previously
   rewarding feeders. These results suggest that chickadees learned the
   direction rule for daily feeder rotation and used this to guide their
   decisions while searching for a food reward. Thus, chickadees appear to
   use an executive function to make decisions on a foraging-based task in
   the wild.},
DOI = {10.1016/j.cub.2023.06.036},
EarlyAccessDate = {AUG 2023},
